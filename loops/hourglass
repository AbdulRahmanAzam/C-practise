#include <stdio.h>
int hourglass(int total, int slaps, char var){
    int i,j,k;
    int a,b;
    //x and y are left line limits
    int x = 2*total ,y =-1;
    for(i=0;i<2*total+2;i++){
        for(j=0;j<2*total;j++){
        
            if(j==y){
                printf("\\");
                
            }else if(j==x){
                printf("/");
                
            }else if(i== 2*total+1||i==0){
                printf("&");
            }
            // else if(i<total &&(j<y || j>x) || i>=total &&(j>y || j<x)){
            //     printf(".");
            // }
            else{
                printf(" ");
            }
        }//end j loop
        y++;
        x--;
        printf("\n");
    }//end i loop
}//end hourglass
int main() {
    int total = 10;
    int elaps = 0;
    char var = '*';
    hourglass(total,elaps,var);
}
