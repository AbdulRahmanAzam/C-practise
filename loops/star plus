#include<stdio.h>

int main() {
    int i=0, j =0, n =3;
    printf("Enter any Odd number ");
    scanf("%d", &n);
    
    for(i=1;i<=n;i++){
        for(j=1;j<=n;j++){
            if(i== (n+1)/2 || j== (n+1)/2)
                printf("*");
            else
                printf("1");
        }
        printf("\n");
    }
}//end main

