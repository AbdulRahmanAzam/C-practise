**   **
*     *

## Code:
#include <stdio.h>
int main() {
    int i, j,k, a, n,c,b,l;
    printf(" n = ");
    scanf("%d", &n);
    a = 0;
    b = n * 2 ;
    c=n;
    for(i =0; i < n; i++){
        for(j=1;j<= n-i ; j++){
                printf("*");
        }//end j loop
        for(k =1;k<a;k++){
            printf(" ");
        }//end k loop
        a=a+2;
        for(l=n-i;l>0;l--){
            if(l==1 && i==0) printf("");
            else printf("*");
        }//end l loop
        printf("\n");
    }// end i loop

    return 0;
}//end main
