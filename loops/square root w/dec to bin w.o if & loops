#include <stdio.h>

int main() {
    int n ;
    int mask = 16;
    
    printf("enter even number ");
    scanf("%d", &n);
    
    printf("%d ", n & mask && 1); //1
    mask >>=1;
    printf("%d ", n & mask && 1);//2
    mask >>=1;
    printf("%d ", n & mask && 1);//3
    mask >>=1;
    printf("%d ", n & mask && 1);//4
    mask >>=1;
    printf("%d ", n & mask && 1);//5
    mask >>=1;
    printf("%d ", n & mask && 1);//6
    mask >>=1;
    printf("%d ", n & mask && 1);//7
    mask >>=1;
    printf("%d ", n & mask && 1);//8
    mask >>=1;
}
