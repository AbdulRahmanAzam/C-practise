#include<math.h>
#include <stdio.h>
int main(){
    float n,k;
    scanf("%f",&n);
    scanf("%f",&k);
    if(k<=n/2){
        for(int i=1,j=1;i<=n -1;i=i+2,j++){
            if(j==k){
                printf("%d",i);
            }
        }
    }else {
        for(int j=2,i=ceil(n/2+1);j<=n;j=j+2,i++){
            if(i==k){
                printf("%d",j);
            }
        }
    }
}





